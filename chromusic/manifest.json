{
    "manifest_version": 3,
    "name": "Chromusic",
    "version": "0.8",
    "description": "Play my fav sounds, without to deals with multiples tabs/applications",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    }
}